{
  "name": "secure-gateway-api",
  "version": "1.0.0",
  "description": "Secure API gateway for n8n to protect MariaDB access",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
