    "compression": "^1.8.1",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.2.1",
    "nanoid": "^5.1.5"
  },
  "devDependencies": {
    "dotenv": "^17.2.1",
    "nodemon": "^3.1.10"
  }
}
